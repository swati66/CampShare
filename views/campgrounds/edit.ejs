<% include ../partials/header %>
    
    <div class="container" style="width: 30%; margin: 0 auto;">
     <h2 style="margin-bottom: 30px;">New Camping Site</h2>
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
              <input type="text" name="campground[name]" class="form-control" value="<%= campground.name%>">  
            </div>   
            
            <div class="form-group">
              <input type="number" name="campground[price]" class="form-control" value="<%= campground.price%>" min="0" step="0.50"> 
            </div>
            
            <div class="form-group">
              <input type="text" name="campground[image]" class="form-control" value="<%= campground.image%>"> 
            </div> 
            
             <div class="form-group">
              <input type="text" name="campground[description]" class="form-control" value="<%= campground.description%>"> 
            </div> 
            
            
            <input type="submit" value="Submit"  class="btn btn-lg btn-primary btn-block">
        </form> 
        <a href="/campgrounds">Back</a>
    </div>
    
    
    
<% include ../partials/footer %>